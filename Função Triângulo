function Triangulo(base, altura, area) {
    this.base = base;
    this.altura = altura;
    this.area = (base * altura)/2;
    this.info = function() {
    console.log('Base: ' + this.base + "\nAltura: " +this.altura + "\n√Årea: " + this.area);
    };
 
}

let forma = new Triangulo(prompt("Digite a base:"),prompt("Digite a altura:"))
forma.info()
